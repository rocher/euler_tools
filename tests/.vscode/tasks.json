{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "alr: Build current project",
         "type": "shell",
         "command": "alr build",
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": [
            "$ada"
         ],
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": true
         }
      }
   ]
}